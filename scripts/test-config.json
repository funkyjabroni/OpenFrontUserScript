    "format": "detailed",
    "outputs": {
      "console": true,
      "file": true,
      "filePattern": "test-results-${date}.log"
    },
    "categories": {
      "blockchain": true,
      "ui": true,
      "performance": true,
      "errors": true,
      "debug": false
    }
  },
  "performance": {
    "thresholds": {
      "blockchainResponse": 5000,
      "uiRender": 100,
      "modalDisplay": 500,
      "transactionConfirm": 30000
